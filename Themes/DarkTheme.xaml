<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextColor" Color="White"/>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackground}" />
        <Setter Property="Foreground" Value="{StaticResource TextColor}" />
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBox}">
        <Setter Property="Background" Value="#2E2E2E"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#555"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource RoundedButton}">
        <Setter Property="Background" Value="#3A72C2"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

</ResourceDictionary>